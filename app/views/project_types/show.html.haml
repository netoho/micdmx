- model_class = ProjectType
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:project_type) + ':'
  %br
  = @project_type.project_type
%p
  %strong= model_class.human_attribute_name(:status_id) + ':'
  %br
  = @project_type.status_id


= link_to t('.back', :default => t("helpers.links.back")), project_types_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_project_type_path(@project_type), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), project_type_path(@project_type), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
